{
  "name": "twitterwall",
  "private": true,
  "version": "1.0.0",
  "description": ".concat() twitterwall",
  "main": "index.js",
  "engines": {
    "node": "^8.0.0"
  },
  "scripts": {
    "build": "./bin/build",
    "build-css": "lessc app/styles/index.less > build/bundle.css",
    "build-html": "cp app/templates/*.html build/",
    "build-js": "browserify app/index.js > build/bundle.js",
    "clean": "rm -rf build && mkdir build",
    "copy": "cp -r app/images build",
    "lint": "eslint -c .eslintrc ./app",
    "lint:fix": "eslint --fix -c .eslintrc ./app",
    "watch-css": "watch 'npm run build-css' app/styles",
    "watch-html": "watch 'npm run build-html' app/templates",
    "watch-js": "watchify app/index.js -o build/bundle.js -dv",
    "watch": "./bin/watch",
    "dev": "./bin/dev",
    "kill-dev": "ps ax | grep watch | awk '{print $1}' | xargs kill",
    "start": "npm run build && nf start",
    "server": "nf start",
    "test": "standard"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/conc-at/twitterwall.git"
  },
  "keywords": [
    "twitter",
    "tweet",
    "twitterwall"
  ],
  "author": "",
  "contributors": [
    "Stephan BÃ¶nnemann <stephan@boennemann.me>",
    "Christoph Witzko <github@christophwitzko.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/conc-at/twitterwall/issues"
  },
  "homepage": "https://github.com/conc-at/twitterwall",
  "dependencies": {
    "angular": "^1.3.13",
    "angular-animate": "^1.3.13",
    "angular-sanitize": "^1.3.13",
    "basic-auth-connect": "^1.0.0",
    "body-parser": "^1.10.0",
    "browserify": "^16.1.0",
    "browserify-shim": "^3.8.1",
    "cors": "^2.5.2",
    "debug": "^3.0.0",
    "express": "^4.10.6",
    "foreman": "^2.0.0",
    "lanyrd": "^0.3.0",
    "less": "^3.0.1",
    "lodash.omit": "^4.5.0",
    "markdown": "^0.5.0",
    "moment": "^2.20.1",
    "ng-time-relative": "^0.7.0",
    "node-fetch": "^2.0.0",
    "parallizer": "^2.0.1",
    "randomcolor": "^0.5.0",
    "request": "^2.51.0",
    "socket.io": "^2.0.0",
    "socket.io-client": "^2.0.0",
    "twemoji": "^2.2.0",
    "twit": "^2.2.5",
    "twitter-text": "^2.0.4",
    "url-join": "4.0.0",
    "watch": "^1.0.1"
  },
  "devDependencies": {
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "prettier": "^1.10.2",
    "standard": "*",
    "watchify": "^3.7.0"
  },
  "standard": {
    "ignore": [
      "build/**"
    ]
  },
  "browser": {
    "angular": "./node_modules/angular/angular.js",
    "angular-sanitize": "./node_modules/angular-sanitize/angular-sanitize.js",
    "angular-animate": "./node_modules/angular-animate/angular-animate.js"
  },
  "browserify-shim": {
    "angular": "angular",
    "angular-sanitize": {
      "depends": [
        "angular"
      ]
    },
    "angular-animate": {
      "depends": [
        "angular"
      ]
    }
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  }
}
